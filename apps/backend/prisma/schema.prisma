// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id        Int     @id @default(autoincrement())
  firstname String
  lastname  String
  email     String  @unique
  oauth     String
  tel       String?
  country   String?
  bio       String?
  meals     Meal[]
}

model Meal {
  id     Int    @id @default(autoincrement())
  name   String @unique
  about  String
  userId Int
  User   User   @relation(fields: [userId], references: [id])
}
